<h1> <%= @merchant.name %>'s Coupons </h1>

<div id="active_coupons">
<h2> Active Coupons </h2>
    <ul>
        <% @active_coupons.each do |coupon| %>
            <li>
                <%= link_to coupon.name, merchant_coupon_path(@merchant, coupon) %>
                <%= coupon.discount_type == "percent" ? "#{coupon.discount_amount}% off" : "$#{coupon.discount_amount} off" %>
            </li>
        <% end %>
    </ul>
</div>

<div id="inactive_coupons">
<h2> Inactive Coupons </h2>
    <ul>
        <% @inactive_coupons.each do |coupon| %>
                <li>
                    <%= link_to coupon.name, merchant_coupon_path(@merchant, coupon) %>
                    <%= coupon.discount_type == "percent" ? "#{coupon.discount_amount}% off" : "$#{coupon.discount_amount} off" %>
                </li>
        <% end %>
    </ul>
</div>

<p><%= link_to "Create New Coupon", new_merchant_coupon_path(@merchant) %></p>